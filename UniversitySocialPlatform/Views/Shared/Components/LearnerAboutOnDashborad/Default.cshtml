@using EntityLayer.Concrete
@model List<Learner>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkınızda</h4>
                @foreach (var item in Model)
                {
                    <div class="d-flex mt-5 align-items-top">
                        <img src=@item.LearnerImage class="img-sm rounded-circle mr-3" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@item.LearnerName @item.LearnerSurname</h5>
                            <p class="mb-0 font-weight-light">@item.LearnerAbout</p>
                        </div>
                        <div class="ml-auto">
                            <i class="mdi mdi-heart-outline text-muted"></i>
                        </div>
                    </div>}
            </div>
        </div>
    </div>
</div>