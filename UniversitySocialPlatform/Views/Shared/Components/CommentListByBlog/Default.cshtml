@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="comment-top">
    <h4>Yorumlar</h4> <br />
    @foreach (var item in Model)
    {
        <div class="media">
            <i class="far fa-user"></i>
            <div class="media-body ml-2">
                <!-- ml-2, içerideki içeriği bir miktar içeriye kaydırır -->
                @item.CommentAnonymousName
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }
</div> <br />
