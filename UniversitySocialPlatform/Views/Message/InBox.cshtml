@using EntityLayer.Concrete
@model List<Messages>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/LearnerLayout.cshtml";
}




<h1>Gelen Kutusu</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>

    @{
        int counter = 1;
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>@counter</td>
            <td>@item.Subject</td>
            <td>@item.SenderLearner.LearnerName @item.SenderLearner.LearnerSurname</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd MMM yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-danger">Mesajı Aç</a></td>
        </tr>

        counter++;
    }
</table>

<a href="/Message/SendMessage/" class="btn btn-info">Mesaj Oluştur</a>