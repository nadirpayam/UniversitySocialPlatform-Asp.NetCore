

<div class="comment-top">
    <h4>Bir Yorum Yapın!</h4>
    <div class="comment-bottom">
        <form method="post">
            <input class="form-control" type="text" id="ad" name="CommentAnonymousName" placeholder="Adınız Soyadınız" required="">
            <input class="form-control" type="text" id="title" name="CommentTitle" placeholder="Konu" required="">
            <textarea class="form-control" name="CommentContent" id="yorum" placeholder="Yorumunuz" required=""></textarea>
            <button id="gonder" type="submit" class="btn btn-primary" >Gönder</button>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    let postId = window.location.href.split('/').pop();
    $("#gonder").click(function (event) {
        let values = {
            CommentAnonymousName: $("#ad").val(),
            CommentTitle: $("#title").val(),
            CommentContent: $("#yorum").val()
        };
        $.ajax({
            type: "post",
            url: "/Comment/PartialAddComment/" + postId,
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
                console.log("kankş")
            }
        });
    });
</script>